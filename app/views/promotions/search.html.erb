<%= link_to 'Voltar', root_path %>

<%= link_to 'Registrar uma promoção', new_promotion_path %>

<%= form_with url: search_promotions_path, method: :get do |f| %>
  <%= f.label :q, 'Busca' %>
  <%= f.text_field :q %>
  <%= f.submit 'Buscar' %>
<% end %>

<%= t '.result', count: @promotions.count, term: @term %>

<%= render @promotions %>
